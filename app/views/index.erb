<div class="welcome">
  <img src="/landing-pic.jpg" alt='inspiration' />
  <div class="welcome_content">
    <h1>hi
      <% if current_user != nil %>
        <%= current_user.first_name %>!
      <% end %>
    </h1>
    <form action="/users/victories/new" method="POST">
      <input type="text" name="title" placeholder="enter your victory here">
      <button type="submit">win</button>
      <select name="tags">
        <option>Please select a tag</option>
        <% @tags.each do |tag| %>
          <option><%= tag.name %></option>
        <% end %>
      </select>
    </form>
    <div class="add_tag_button">click here to add a tag</div>
    <div class="welcome_victory"><%= @victory.title %>
      <br>-
      <% if current_user == nil %>
        <span>
          <%= @victory.user.first_name.first %> from <%= @victory.user.city %>,
        </span>
      <% end %>
      <span><%= @victory.created_at.strftime("%B %d") %></span>
    </div>
  </div>
</div>

<div class="random_victories">
  <table>
    <tr>
    <% @victory_random_three.each_with_index do |victory, index| %>
      <td>
          <span>0<%= index + 1 %></span>
          <h3><%= victory.created_at.strftime("%B %d") %></h3>
          <p><%= victory.title %></p>
      </td>
    <% end %>
    </tr>
  </table>
  <% if current_user != nil %>
    <a href="/users/<%= current_user.id %>/victories">See all you victories</a>
  <% else %>
    <a href="/users/login">See all you victories</a>
  <% end %>
</div>

<div class="tagging_links">
  <p>tags</p>
  <% @tags.each do |tag| %>
    <span><%= tag.name %></span>
  <% end %>
</div>

